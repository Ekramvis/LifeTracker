<h1><%= @goal.objective %></h1>


<%= form_for [@goal, @task] do |f| %> 
  <%= hidden_field_tag "task[goal_id]", @goal.id %>
  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :value, "What's it worth?" %>
  <%= select_tag :value, options_for_select([["1 point", "1"],["2 points", "2"],["3 points", "3"],["4 points", "4"],["5 points", "5"]]), :class => "select-medium" %>

  <%= f.label :frequency, "Times per week" %>
  <%= select_tag :frequency, options_for_select([["1x", "1"],["2x", "2"],["3x", "3"],["4x", "4"],["5x", "5"],["6x", "6"],["Daily", "7"]]), :class => "select-small" %>
  
  
  <%= f.submit "Add" %>
<% end %>